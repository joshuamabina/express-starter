{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "A barebones app using the latest JavaScript features on the server.",
  "repository": "https://github.com/joshuamabina/express-starter",
  "author": "Joshua Mabina <mabinajoshua@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "8.6.0"
  },
  "scripts": {
    "api-docs": "gulp apidoc",
    "clean": "rimraf dist",
    "test": "npm run build:dev && jest --detectOpenHandles --forceExit",
    "watch": "webpack --mode=development --watch",
    "start": "node dist/bundle.js",
    "build:dev": "npm run clean && webpack --mode=development",
    "build:prod": "npm run clean && webpack --mode=production"
  },
  "keywords": [
    "express",
    "babel",
    "boilerplate",
    "scaffold",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "@babel/runtime": "^7.5.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.3",
    "mongoose-unique-validator": "^2.0.2",
    "morgan": "^1.9.0",
    "nunjucks": "^3.1.6",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg-promise": "^8.7.2",
    "rimraf": "^2.6.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-preset-airbnb": "^4.0.1",
    "babel-register": "^6.26.0",
    "bootstrap": "^4.3.1",
    "css-loader": "^3.1.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-watch": "^3.1.3",
    "gulp": "^4.0.2",
    "gulp-apidoc": "^0.2.8",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.0.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/*.js?(x)"
    ],
    "testEnvironment": "node",
    "verbose": true
  },
  "nodemonConfig": {
    "ignore": [
      "dist/"
    ],
    "delay": "2500"
  }
}
